pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
        git url: 'https://github.com/Anand-poola/ProjectforCD.git', branch: 'main'
    }
        }

        stage('Build with Maven') {
            steps {
        echo "Running Maven build..."
        sh 'mvn clean package'
    }
        }

        stage('Scanning code using sonar scanner') {
            steps {
                withSonarQubeEnv('PROJECT_CD') {
            sh """
                mvn clean verify sonar:sonar \
                -Dsonar.projectKey=my-project \
                -Dsonar.projectName="project_cd" \
                -Dsonar.host.url=http://16.16.79.193:9000
            """
            }
    }
         
        }

        stage('Quality Gate') {
            steps {
        timeout(time: 2, unit: 'MINUTES') {
            waitForQualityGate abortPipeline: true
        }
    }
}
}

