pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
        git url: 'https://github.com/Anand-poola/ProjectforCD.git', branch: 'main'
    }
        }

        stage('Build with Maven') {
            steps {
        echo "Running Maven build..."
        sh 'mvn clean package'
    }
        }

        stage('Scanning code using sonar scanner') {
            steps {
                withSonarQubeEnv('PROJECT_CD') {
            sh """
                mvn clean verify sonar:sonar \
                -Dsonar.projectKey=my-project \
                -Dsonar.projectName="project_cd" \
                -Dsonar.host.url=http://16.16.216.158:9000
            """
            }
    }
         
        }

        stage('Quality Gate') {
            steps {
        timeout(time: 5, unit: 'MINUTES') {
            waitForQualityGate abortPipeline: true
        }
    }
        }

        stage('Build Docker Image') {
            steps {
             script {
            sh "sudo docker build -t myapp:latest ."
        }
    }
        }

        stage('Trivy Scan') {
            steps {
                sh """
                    trivy fs --exit-code 0 --severity HIGH,CRITICAL,MEDIUM,LOW .
                """
            }
        }

        stage('Push to Docker Hub') {
            steps {
              script {
                docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-creds') {
                def img = docker.image('anand/myapp:latest')
                img.push()
            }
        }
    }
}

        }
}
